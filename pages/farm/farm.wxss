.header {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
}
.header .search {
  width: 174rpx;
  height: 58rpx;
  background-color: #d8d5d5;
  border-radius: 29rpx;
  padding: 0 26rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #fff;
  border:7rpx solid #9bb496;
}

.store-map {
  width: 100%;
  height: 450rpx;
  transition: all 0.5s;
  position: relative;
}
.store-map .current-icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 18rpx;
  bottom: 22rpx;
}

.myView{
  margin: 10rpx;
  border:7rpx solid #9bb496;
}

.collapse-area {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #777777;
}
.collapse-area .icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

.store-list {
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
  transition: all 0.5s;
}
.store-list .empty {
  margin-top: 30rpx;
  font-size: 20rpx;
  color: #777777;
  text-align: center;
}
.store-list .store-box {
  background-color: #ffffff;
  padding: 25rpx;
  margin: 14rpx 25rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4px 10px 0 rgba(83, 83, 83, 0.288);
  border-radius: 20rpx;
  border:7rpx solid #9bb496;
}
.store-list .store-box .info-area {
  flex: 1;
  border-right: 1rpx solid #eeeeee;
}
.store-list .store-box .info-area .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}
.store-list .store-box .info-area .info {
  font-size: 22rpx;
  color: #777777;
  margin-bottom: 12rpx;
}
.store-list .store-box .info-area .tag {
  display: inline-block;
  background-color: #9bb496;
  font-size: 18rpx;
  color: #fff;
  border-radius: 10rpx;
  padding: 8rpx 12rpx;
}
.store-list .store-box .location-area {
  height: 100%;
  margin-left: 25rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.store-list .store-box .location-area .distance {
  font-size: 20rpx;
  color: #777777;
  margin-bottom: 35rpx;
}
.store-list .store-box .location-area .action-area {
  width: 112rpx;
  display: flex;
  justify-content: space-around;
}
.store-list .store-box .location-area .action-area image {
  width: 40rpx;
  height: 40rpx;
}

.store-detail .notification {
  width: 100%;
  height: 86rpx;
  display: flex;
  align-items: center;
  background-color: #fcf0f4;
  padding: 0 30rpx;
}
.store-detail .notification .icon {
  width: 38rpx;
  height: 38rpx;
  margin-right: 14rpx;
}
.store-detail .notification .info {
  font-size: 20rpx;
  color: #E60012;
}
.store-detail .container {
  padding: 0 30rpx;
}
.store-detail .container .header-area {
  margin: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.store-detail .container .header-area .info .title {
  font-size: 26rpx;
  font-weight: bold;
  line-height: 26rpx;
  margin-bottom: 14rpx;
}
.store-detail .container .header-area .info .address {
  font-size: 20rpx;
  line-height: 20rpx;
  color: #777777;
}
.store-detail .container .header-area .distance {
  display: flex;
  font-size: 20rpx;
  color: #777777;
}
.store-detail .container .store-detail-map {
  width: 100%;
  height: 392rpx;
  margin: 25rpx 0;
}
.store-detail .container .menu-btn {
  width: 100%;
  height: 85rpx;
  background-color: #E60012;
  color: white;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 42rpx;
}
.store-detail .container .menu-btn.button-hover {
  opacity: 0.6;
}

.btn_talk[plain] {
  padding: 0;
  border:none;   
}



.show {
  display: block;
}

.store-list_hide {
  width: 100%;
  box-sizing: border-box;
  background-color: #f8f8f8;
  transition: all 0.5s;
  display: none;
}